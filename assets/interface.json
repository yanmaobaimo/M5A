{
    // 本文件主要定义了通用 UI 的行为和显示内容
    // 可参考文档和示例添加更多您需要的功能
    // 文档：https://maafw.xyz/docs/3.3-ProjectInterfaceV2
    // 示例：https://github.com/MaaXYZ/MaaFramework/blob/main/sample/interface.json
    "interface_version": 2,
    "name": "M5A",
    "description": "这是一个使用 MaaFramework 创建的第五人格自动化项目。",
    "contact": "没有捏",
    "license": "MIT",
    "welcome": "首次使用！欢迎使用 M5A!",
    // 填写项目地址和版本号可实现自动更新功能
    "github": "https://github.com/yanmaobaimo/M5A",
    "version": "1.0.0",
    // Mirror酱为第三方分发服务，新项目默认关闭
    // 若有需要请联系 Mirror酱 开通，直接自行开启是无法使用的
    // "mirrorchyan_rid": "MaaXXX",
    // "mirrorchyan_multiplatform": true,
    "controller": [
        {
            "name": "安卓端",
            "type": "Adb",
            "display_short_side": 720 // 默认缩放分辨率的短边长度
        },
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "Visual Studio",
                // 截图及控制方式，请根据项目实际情况修改
                // 文档: https://maafw.xyz/docs/2.4-ControlMethods
                "screencap": "PrintWindow", // 截图方式
                "mouse": "PostMessageWithCursorPos", // 鼠标控制方式
                "keyboard": "PostMessageWithCursorPos" // 键盘控制方式
            }
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "./resource"
            ]
        }
    ],
    "agent": {
        "child_exec": "python",
        "child_args": [
            "./agent/main.py"
        ]
    },
    "task": [
        {
            "name": "启动游戏",
            "entry": "启动游戏_启动游戏",
            "default_check": true
        },
        {
            "name": "黑杰克",
            "entry": "黑杰克_开始",
            "default_check": true,
            "description": "小女孩邦邦",
            "repeatable": true,
            "repeat_count": 3
        },
        {
            "name": "3胜",
            "entry": "3胜_开始",
            "default_check": true,
            "description": "随机屠匹黑杰克"
        },
        {
            "name": "屠排",
            "entry": "屠排_开始",
            "default_check": true,
            "description": "聆听张狂厂长",
            "repeatable": true,
            "repeat_count": 3
        },
        {
            "name": "屠匹",
            "entry": "屠匹_开始",
            "default_check": true,
            "description": "聆听张狂厂长",
            "repeatable": true,
            "repeat_count": 6
        },
        {
            "name": "每日免费礼包",
            "entry": "每日免费礼包_商城",
            "default_check": true
        },
        {
            "name": "协会签到",
            "entry": "协会签到_协会",
            "default_check": true
        },
        {
            "name": "任务奖励",
            "entry": "任务奖励_任务",
            "default_check": true
        },
        {
            "name": "随笔浮想",
            "entry": "随笔浮想_开始"
        },
        {
            "name": "关闭游戏",
            "entry": "关闭游戏"
        },
        {
            "name": "截图",
            "entry": "截图"
        },
        {
            "name": "测试",
            "entry": "3胜_开始"
        }
    ]
}